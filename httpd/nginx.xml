<project name="nginx-ant" default="runTests" xmlns:antcontrib="antlib:net.sf.antcontrib">

	<dirname property="httpd-ant.basedir" file="${ant.file.httpd-ant}" />
	<property file="${httpd-ant.basedir}/httpd.properties"/>
		
